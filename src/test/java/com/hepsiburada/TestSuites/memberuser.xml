<!--Merhaba! Study Case'deki 1. ve 2. soruyu iki farklı suitte cevapladım.-->
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Hepsi Burada Study Case Suite">

    <test name="Home Page Test">
        <classes>
            <class name="com.hepsiburada.TestCases.HomePageTest"/>
        </classes>
    </test>

    <test name="Login Test">
        <classes>
            <class name="com.hepsiburada.TestCases.LoginPageTest">
                <methods>
                    <include name="userLogin"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Add Product To Cart Test">
        <classes>
            <class name="com.hepsiburada.TestCases.AddProductToCartPageTest">
                <methods>
                    <include name="addProductToCart"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Logout Test">
        <classes>
            <class name="com.hepsiburada.TestCases.LogoutPageTest">
                <methods>
                    <include name="logOut"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>

